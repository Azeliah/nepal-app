<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <Button
        android:id="@+id/yesButton"
        android:layout_width="104dp"
        android:layout_height="78dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="44dp"
        android:text="@string/yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionImage"
        tools:text="Yes"
        tools:visibility="visible" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="104dp"
        android:layout_height="78dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="56dp"
        android:text="@string/no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionImage"
        tools:text="No"
        tools:visibility="visible" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginBottom="44dp"
        android:text="@string/nextQuestion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Next Question"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="260dp"
        android:layout_height="201dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizQuestion"
        app:srcCompat="@drawable/potatoes" />

    <TextView
        android:id="@+id/quizTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/quiz"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Quiz" />

    <TextView
        android:id="@+id/quizQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/question1"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizTitle" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="193dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:text="Correct"
        android:textAlignment="center"
        android:textColor="#68F106"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Correct" />
</androidx.constraintlayout.widget.ConstraintLayout>